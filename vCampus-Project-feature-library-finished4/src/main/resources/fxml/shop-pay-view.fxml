<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.vCampus.view.ShopPayController">
    <center>
        <GridPane hgap="10" vgap="10" style="-fx-padding:16;">
            <columnConstraints>
                <ColumnConstraints prefWidth="120"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>
            <Label text="待支付订单" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <Label fx:id="lbOrderId" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Label text="账户余额" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <Label fx:id="lbBalance" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            <Label text="应付金额" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <Label fx:id="lbAmount" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        </GridPane>
    </center>
    <bottom>
        <HBox spacing="10" style="-fx-padding:10; -fx-alignment:CENTER_RIGHT;">
            <Button text="取消" onAction="#onCancel"/>
            <Button text="立即支付" onAction="#onPay"/>
        </HBox>
    </bottom>
</BorderPane>


