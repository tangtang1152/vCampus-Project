<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.vCampus.view.LoginController"
      spacing="20" alignment="CENTER"
      style="-fx-background-color: linear-gradient(to bottom, #667eea 0%, #764ba2 100%); -fx-padding: 40;">
    
    <!-- 标题 -->
    <Label text="vCampus 系统登录" 
           style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
    
    <!-- 登录表单 -->
    <GridPane hgap="10" vgap="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30;">
        <padding><Insets top="20" right="30" bottom="20" left="30"/></padding>
        
        <Label text="用户名:" GridPane.columnIndex="0" GridPane.rowIndex="0"
               style="-fx-font-weight: bold;"/>
        <TextField fx:id="usernameField" promptText="请输入用户名" 
                  GridPane.columnIndex="1" GridPane.rowIndex="0"
                  style="-fx-min-width: 200;"/>
        
        <Label text="密码:" GridPane.columnIndex="0" GridPane.rowIndex="1"
               style="-fx-font-weight: bold;"/>
        <PasswordField fx:id="passwordField" promptText="请输入密码" 
                      GridPane.columnIndex="1" GridPane.rowIndex="1"
                      style="-fx-min-width: 200;"/>
        
        <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <Button text="登录" onAction="#onLogin" 
                   style="-fx-background-color: #667eea; -fx-text-fill: white; -fx-min-width: 80;"/>
            <Button text="注册" onAction="#onRegister" 
                   style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-min-width: 80;"/>
        </HBox>
        
        <Hyperlink text="忘记密码?" onAction="#onForgotPassword" 
                  GridPane.columnIndex="1" GridPane.rowIndex="3"
                  style="-fx-text-fill: #667eea;"/>
    </GridPane>
    
    <!-- 底部信息 -->
    <Label text="vCampus © 2024" 
           style="-fx-text-fill: white; -fx-font-size: 12px;"/>
    
</VBox>