<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.vCampus.view.StudentFormController"
            stylesheets="@../css/main.css">
    <center>
        <GridPane hgap="10" vgap="10" style="-fx-padding: 20;">
            <Label text="学号" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="studentIdField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="姓名" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="nameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="班级" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="classField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="性别" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <ComboBox fx:id="sexBox" GridPane.rowIndex="3" GridPane.columnIndex="1">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="男"/>
                        <String fx:value="女"/>
                    </FXCollections>
                </items>
            </ComboBox>

            <Label text="邮箱" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextField fx:id="emailField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Label text="身份证号" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <TextField fx:id="idCardField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

            <Label text="入学日期" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
            <DatePicker fx:id="enrollDatePicker" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

            <Label text="学籍状态" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
            <ComboBox fx:id="statusBox" GridPane.rowIndex="7" GridPane.columnIndex="1">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="正常"/>
                        <String fx:value="休学"/>
                        <String fx:value="退学"/>
                        <String fx:value="毕业"/>
                    </FXCollections>
                </items>
            </ComboBox>
        </GridPane>
    </center>
    <bottom>
        <HBox spacing="10" style="-fx-padding: 10;" alignment="CENTER_RIGHT">
            <Button fx:id="saveBtn" text="保存" onAction="#onSave"/>
        </HBox>
    </bottom>
</BorderPane>
 