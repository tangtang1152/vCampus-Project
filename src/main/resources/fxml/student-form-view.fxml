<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.vCampus.view.StudentFormController"
          hgap="10" vgap="15"
          style="-fx-padding: 20;">
    
    <Label text="学号:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="studentIdField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
    
    <Label text="姓名:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="studentNameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    
    <Label text="班级:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="classNameField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    
    <Label text="性别:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <ComboBox fx:id="sexComboBox" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    
    <Label text="邮箱:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    
    <Label text="身份证号:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <TextField fx:id="idCardField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
    
    <Label text="入学日期:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
    <DatePicker fx:id="enrollDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
    
    <Label text="学籍状态:" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
    <ComboBox fx:id="statusComboBox" GridPane.columnIndex="1" GridPane.rowIndex="7"/>
    
    <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="8" alignment="CENTER_RIGHT">
        <Button text="保存" onAction="#onSave" style="-fx-min-width: 80;"/>
        <Button text="取消" onAction="#onCancel" style="-fx-min-width: 80;"/>
    </HBox>
    
</GridPane>