<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.vCampus.view.TemplateController"
          hgap="10" vgap="10"
          style="-fx-padding: 20; -fx-background-color: #f5f5f5;">
    
    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
    
    <!-- 标题 -->
    <Label text="表单标题" GridPane.columnIndex="0" GridPane.rowIndex="0"
           GridPane.columnSpan="2" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
    
    <!-- 表单字段示例 -->
    <Label text="字段1:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="field1" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    
    <Label text="字段2:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="field2" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    
    <!-- 按钮区域 -->
    <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="3">
        <Button text="保存" onAction="#onSave" style="-fx-min-width: 80;"/>
        <Button text="取消" onAction="#onCancel" style="-fx-min-width: 80;"/>
    </HBox>
    
</GridPane>