<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.vCampus.view.StudentDetailController"
      spacing="15"
      style="-fx-padding: 20;">
    
    <Label text="学生详细信息" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    <Separator/>
    
    <GridPane hgap="10" vgap="10">
        <Label text="学号:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-weight: bold;"/>
        <Label fx:id="studentIdLabel" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        
        <Label text="姓名:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-weight: bold;"/>
        <Label fx:id="studentNameLabel" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        
        <Label text="班级:" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-font-weight: bold;"/>
        <Label fx:id="classNameLabel" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        
        <Label text="性别:" GridPane.columnIndex="0" GridPane.rowIndex="3" style="-fx-font-weight: bold;"/>
        <Label fx:id="sexLabel" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        
        <Label text="邮箱:" GridPane.columnIndex="0" GridPane.rowIndex="4" style="-fx-font-weight: bold;"/>
        <Label fx:id="emailLabel" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        
        <Label text="身份证号:" GridPane.columnIndex="0" GridPane.rowIndex="5" style="-fx-font-weight: bold;"/>
        <Label fx:id="idCardLabel" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
        
        <Label text="入学日期:" GridPane.columnIndex="0" GridPane.rowIndex="6" style="-fx-font-weight: bold;"/>
        <Label fx:id="enrollDateLabel" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
        
        <Label text="学籍状态:" GridPane.columnIndex="0" GridPane.rowIndex="7" style="-fx-font-weight: bold;"/>
        <Label fx:id="statusLabel" GridPane.columnIndex="1" GridPane.rowIndex="7"/>
        
        <Label text="用户名:" GridPane.columnIndex="0" GridPane.rowIndex="8" style="-fx-font-weight: bold;"/>
        <Label fx:id="usernameLabel" GridPane.columnIndex="1" GridPane.rowIndex="8"/>
        
        <Label text="用户角色:" GridPane.columnIndex="0" GridPane.rowIndex="9" style="-fx-font-weight: bold;"/>
        <Label fx:id="roleLabel" GridPane.columnIndex="1" GridPane.rowIndex="9"/>
    </GridPane>
    
    <Separator/>
    
    <!-- 商店模块相关信息 -->
    <Label text="消费信息" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
    <GridPane hgap="10" vgap="10">
        <Label text="订单数量:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-weight: bold;"/>
        <Label fx:id="orderCountLabel" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        
        <Label text="总消费金额:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-weight: bold;"/>
        <Label fx:id="totalSpendingLabel" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    </GridPane>
    
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="关闭" onAction="#onClose" style="-fx-min-width: 80;"/>
    </HBox>
    
</VBox>