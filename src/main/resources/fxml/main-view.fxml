<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.vCampus.view.MainController"
            fx:id="mainContainer"
            stylesheets="@../css/main.css">
    
    <!-- 顶部菜单 -->
    <top>
        <VBox>
            <MenuBar>
                <Menu text="系统">
                    <MenuItem text="退出" onAction="#onExit"/>
                </Menu>
                <Menu text="管理">
                    <MenuItem text="用户管理" onAction="#onUserManagement"/>
                    <MenuItem text="学生管理" onAction="#onStudentManagement"/>
                    <MenuItem text="课程管理" onAction="#onCourseManagement"/>
                    <MenuItem text="图书馆" onAction="#onLibrary"/>
                    <MenuItem fx:id="menuShop" text="商店" onAction="#onShop"/>
                    <MenuItem fx:id="menuLibraryAdmin" text="图书维护(管理员)" onAction="#onLibraryAdmin"/>
                    <MenuItem fx:id="menuShopManagement" text="商品管理" onAction="#onShopManagement"/>
                </Menu>
                <Menu text="帮助">
                    <MenuItem text="关于" onAction="#onAbout"/>
                </Menu>
            </MenuBar>
            
            <!-- 状态栏 -->
            <HBox style="-fx-background-color: #f0f0f0; -fx-padding: 5;" spacing="10">
                <Label fx:id="welcomeLabel" style="-fx-font-weight: bold;"/>
                <Label fx:id="statusLabel"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label text="当前角色:"/>
                <ComboBox fx:id="roleSwitcher" promptText="选择角色" style="-fx-min-width: 120;"/>
                <Label text="就绪"/>
            </HBox>
        </VBox>
    </top>
    
    <!-- 左侧导航 -->
    <left>
        <VBox fx:id="leftNavigation" spacing="10" style="-fx-background-color: #f8f9fa; -fx-padding: 15; -fx-min-width: 200;">
            <!-- 动态导航菜单将在这里生成 -->
        </VBox>
    </left>
    
    <!-- 中心内容区域 -->
    <center>
        <StackPane>
            <Label text="欢迎使用 vCampus 系统\n请从左侧选择功能模块" 
                   style="-fx-font-size: 16; -fx-text-alignment: center;"/>
        </StackPane>
    </center>
    
</BorderPane>